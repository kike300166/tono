    body {
      background-color: #0a0cb3;
      font-family: 'Times New Roman', Times, serif;
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      margin: 0;
    }

    .container {
      max-width: 100%;
      width: 520px;
      height: 380px;
      border-radius: 10px;
      box-shadow: 0 2px 20px 0px rgba(0, 0, 0, 0.18);
      background-color: rgb(92, 142, 175);
      overflow: hidden visible;
      border: 2px solid rgb(41, 27, 165);
      border-radius: 5px;
      text-align: center;
    }

    .header {
      border-bottom: 1px solid #5e8094;
      background-color: rgb(14, 119, 138);
      padding: 20px 40px;
    }

    .header h2 {
      margin: 0;
      color: rgb(204, 107, 204);
    }

    h3 {
      margin-top: 50px;
      margin-bottom: 20px;
      font-size: 24px;
      color: whitesmoke;
      font-weight: bold;
    }

    img {
      max-width: 100%;
      margin: 10px 0;
    }

    button {
      padding: 10px 20px;
      background-color: orangered;
      color: white;
      border: none;
      border-radius: 5px;
      outline: none;
      cursor: pointer;
    }

    a {
      background-color: rgb(250, 213, 200);
      padding: 10px 20px;
      color: black;
      border: none;
      border-radius: 5px;
      outline: none;
      cursor: pointer;
    }

    button:hover {
      background-color: rgb(136, 35, 97);
    }

    h4 {
      border: 2px solid rgb(197, 86, 160);
      border-radius: 5px;
      padding: 10px;
      margin: 10px 0;
    }

    footer {
      width: 520px;
      margin-top: 40px;
      text-align: center;
    }

    address {
      font-family: 'Times New Roman';
    }
