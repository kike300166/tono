  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Agregar Producto</title>
  <style>
    @import url('https://fonts.googleapis.com/css?family=Muli&display=swap');
    @import url('https://fonts.googleapis.com/css?family=Open+Sans:400,500&display=swap');

    * {
      box-sizing: border-box;
    }

    body {
      background-color: #411bc7;
      font-family: 'Times New Roman', Times, serif;
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      margin: 0;
    }

    .container {
      background-color: rgb(122, 155, 182);
      border-radius: 10px;
      box-shadow: 0 2px 20px 0px rgba(0, 0, 0, 0.18);
      overflow: hidden visible;
      width: 525px;
      height: 960px;
      max-width: 100%;
    }

    .header {
      border-bottom: 1px solid #2084b3;
      background-color: rgb(68, 19, 201);
      padding: 20px 40px;
    }

    .header h2 {
      margin: 0;
      color: rgb(248, 105, 53);
    }

    .form {
      padding: 30px 40px;
      font-weight: 500;
      text-align: center;
      margin-top: 5px;
      color: #000000;
    }

    .form-control {
      margin-bottom: 10px;
      padding-bottom: 20px;
      position: relative;
    }

    .form-control label {
      display: inline-block;
      margin-bottom: 5px;
    }

    .form-control input {
      border: 2px solid #f0f0f0;
      border-radius: 4px;
      display: block;
      font-family: inherit;
      font-size: 14px;
      padding: 10px;
      width: 100%;
    }

    .form-control input:focus {
      outline: 0;
      border-color: #5a5959;
    }

    .form-control.success input {
      border-color: #2ecc71;
    }

    .form-control.error input {
      border-color: #e74c3c;
    }

    .form-control i {
      visibility: hidden;
      position: absolute;
      top: 40px;
      right: 10px;
    }

    .form-control.success i.fa-check-circle {
      color: #2ecc71;
      visibility: visible;
    }

    .form-control.error i.fa-exclamation-circle {
      color: #e74c3c;
      visibility: visible;
    }

    .form-control small {
      color: #e74c3c;
      position: absolute;
      bottom: 0;
      left: 0;
      visibility: hidden;
    }

    .form-control.error small {
      visibility: visible;
    }

    .form button {
      background-color: rgb(255, 102, 46);
      border: 2px solid rgb(70, 30, 16);
      border-radius: 4px;
      color: #fff;
      display: block;
      font-family: inherit;
      font-size: 16px;
      padding: 10px;
      width: 100%;
      cursor: pointer;
      transition: 0.6s;
    }

    .form a{
      background-color: rgb(250, 213, 200);
      border: 2px solid rgb(43, 37, 35);
      border-radius: 4px;
      color: black;
      display: block;
      text-align: center;
      font-family: inherit;
      font-size: 16px;
      padding: 10px;
      margin-top: 20px;
      width: 75%;
      cursor: pointer;
      transition: 0.6s;
    }

    .form a:hover{
      transform: scale(0.95);
      opacity: .8;
    }

    .form button:hover {
      transform: scale(0.95);
      opacity: .8;
    }

    input::placeholder {
      color: #6f7fa065;
    }




    form {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    select {
      width: 100%;
      padding: 10px;
      margin-bottom: 10px;
      margin-top: 10px;
      color: orangered;
      border: 1px solid orangered;
      outline: none;
    }

    textarea {
      padding: 10px;
      margin-top: 10px;
      width: 300px;
      height: 100px;
      box-sizing: border-box;
      border-radius: 5px;
      outline: none;
    }

    button {
      width: 100%;
      padding: 10px;
      margin-top: 10px;
      color: white;
      background-color: orangered;
      border: none;
      outline: none;
      cursor: pointer;
    }

    button:hover {
      background-color: darkorange;
    }

    footer {
      width: 500px;
      text-align: center;
    }

    address {
      font-family: 'Times New Roman';
    }
  </style>


</head>

<body>

  <div class="container">

    <div class="header">
      <h2>Agregar Producto</h2>
    </div>


    <form action="/aggprd" method="post" class="form">
      <div class="form-control">
        <label class="col-form-label col-sm-2" for="nombre">Nombre</label>
        <input type="text" name="nombre" id="nombre" placeholder="Ingrese el nombre del producto" required maxlength="25" minlength="3" />
        <i class="fas fa-check-circle"></i>
        <i class="fas fa-exclamation-circle"></i>
        <small>Error message</small>
      </div>
      <div class="form-control">
        <label class="col-form-label col-sm-2" for="codigo">Codigo</label>
        <input type="number" name="codigo" id="codigo" placeholder="Ingrese el codigo del producto" required />
        <i class="fas fa-check-circle"></i>
        <i class="fas fa-exclamation-circle"></i>
        <small>Error message</small>
      </div>
      <div class="form-control">
        <label class="col-form-label col-sm-2" for="precio">Precio</label>
        <input input type="number" name="precio" id="precio" placeholder="Ingrese el precio del producto" required />
        <i class="fas fa-check-circle"></i>
        <i class="fas fa-exclamation-circle"></i>
        <small>Error message</small>
      </div>
      <div class="form-control">
        <label class="col-form-label col-sm-2" for="marca">Marca</label>
        <input type="text" name="marca" id="marca" placeholder="Ingrese la marca del producto" required />
        <i class="fas fa-check-circle"></i>
        <i class="fas fa-exclamation-circle"></i>
        <small>Error message</small>
      </div>
      <div class="form-control">
        <label class="col-form-label col-sm-2" for="tono">Tono</label>
        <input type="text" name="tono" id="tono" placeholder="Ingrese para cual tono de piel se usara" required />
        <i class="fas fa-check-circle"></i>
        <i class="fas fa-exclamation-circle"></i>
        <small>Error message</small>
      </div>

      <div class="form-group row">
        <label class="col-form-label col-sm-2" for="categoria">Categoria</label>
        <select name="categoria_id" id="categoria_id">
          <option value="">--Seleccione--</option>
          <% if (categorias) { %>
          <% for (let i = 0; i < categorias.length; i++){  %>
          <% if (categorias) { %>
          <option value="<%= categorias[i].id %>" id="categoria_id" name="categoria_id"><%= categorias[i].nombre %></option>

          <% } %>
          <% } %>
          <% } else { %>
          <option value="">No existen categorias en el sistema</option>
          <% }   %>
        </select>
      </div>

      <label class="col-form-label col-sm-2" for="descripcion">Descripcion</label>
      <textarea class="form-control" cols="20" name="descripcion" placeholder="Ingrese la descripcion del producto" required maxlength="32000" rows="7"></textarea>

      <button type="submit" class="btn btn-primary">Subir Producto</button>
      <a class="btn btn-outline-dark cancel" href="/productos">Cancelar</a>
    </form>
    <%- include('footer') -%>
  </div>
</body>

</html>

